@import '_settings'

normalize-css()
base()

@keyframes scroll
  for num in (0..10)
    {10% * num}
      margin-top (-50%*num)
    {10% * num + 9%}
      margin-top (-50%*num)

@keyframes pushBurger
  0%
    left 100%
  100%
    left 50%
  
  
.green
  color green
.pink
  color pink
.orange
  color orange
.blue
  color blue
.violet
  color violet
.white
  color white

.f360
  font-size 96px
  line-height 84px
  letter-spacing -1px
.f300
  font-size 85px
  line-height 75px
.f240
  font-size 75px
  line-height 66px
.f225
  font-size 69px
  line-height 64px
.f200
  font-size 60px
  line-height 60px
.f187
  font-size 55px
  line-height 55px
.f150
  font-size 40px
  line-height 40px

#main
  background black
  color black
  &.w640x320
    width 640px
    height 320px
    overflow hidden
div[id^=slide]
  width 100%
  height 320px
  text-align center
  box-sizing border-box
  text-transform uppercase
  font-weight bold
  letter-spacing -1px
  position relative
#slide1
  padding-top 5%
  animation-name scroll 
  animation-duration 1s
  animation-iteration-count 1
  animation-fill-mode forwards
  animation-timing-function ease
#slide2
  padding-top 12%
#slide3
  background green
  padding-top 9%
#slide4
  padding-top 8%
#slide5
  padding-top 9%
  background pink
#slide6
  padding-top 14%
#slide7
  background blue
  padding-top 9%
#slide8
  padding-top 15%
#slide9
  background orange
  padding-top 9%
#slide10
  padding-top 11%
#slide11
  width 100%
  img
    position absolute
    top 12%
    margin-left -80px
  div[id^=slide11]
    position absolute
    background black
    left 100%
    height inherit
    animation-delay 1s
    animation-duration 1s
    animation-timing-function ease
    animation-fill-mode both
    animation-iteration-count 1
#slide11b
  animation-name pushBurger
  div
    display inline-block
    color white
    font-size 25px
#slide11b, #slide11c
  padding-top 4%
  div
    &:after
      content '/'
      display inline-block
      padding-left 5px
      padding-right 2px
      font-weight normal
    &.green:after
      color green
    &.blue:after
      color blue
    &.pink:after
      color pink
    &.violet:after
      color violet
    &.orange:after
      color orange
#slide11c
  div
    display inline
    font-weight normal
    font-size 16px
  .big
    div
      font-size 20px
      &:after
        display none
  .small
    display block
    text-transform none
    div
      color white
  > .violet:after
    display none
#slide11d
  padding-top 5%