@import '_settings'

normalize-css()
base()

.green
  color green
.pink
  color pink
.orange
  color orange
.blue
  color blue
.violet
  color violet
.white
  color white

.f360
  font-size 96px
  line-height 84px
  letter-spacing -1px
.f300
  font-size 85px
  line-height 75px
.f240
  font-size 75px
  line-height 66px
.f225
  font-size 69px
  line-height 64px
.f200
  font-size 60px
  line-height 60px
.f187
  font-size 55px
  line-height 55px
.f150
  font-size 40px
  line-height 40px
#main
  width 640px
  background black
  color black
div[id^=slide]
  width 100%
  height 320px
  text-align center
  box-sizing border-box
  text-transform uppercase
  font-weight bold
  letter-spacing -1px
  position relative
#slide1
  padding-top 5%
#slide2
  padding-top 12%
#slide3
  background green
  padding-top 9%
#slide4
  padding-top 8%
#slide5
  padding-top 9%
  background pink
#slide6
  padding-top 14%
#slide7
  background blue
  padding-top 9%
#slide8
  padding-top 15%
#slide9
  background orange
  padding-top 9%
#slide10
  padding-top 11%
#slide11
  width 400%
  img
    position absolute
    top 12%
    margin-left -80px
  div[id^=slide11]
    float left
    background black
    width 25%
#slide11b
  div
    display inline-block
    color white
    font-size 25px
#slide11b, #slide11c
  padding-top 4%
  div
    &:after
      content '/'
      display inline-block
      padding-left 5px
      padding-right 2px
      font-weight normal
    &.green:after
      color green
    &.blue:after
      color blue
    &.pink:after
      color pink
    &.violet:after
      color violet
    &.orange:after
      color orange
#slide11c
  div
    display inline
    font-weight normal
    font-size 16px
  .big
    div
      font-size 20px
      &:after
        display none
  .small
    display block
    text-transform none
    div
      color white
  > .violet:after
    display none
#slide11d
  padding-top 5%